<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="500" minWidth="850" onCloseRequest="#handleExit" title="Expense Expert" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/coin_sprite.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>
        <HBox maxHeight="700" minWidth="500.0" prefHeight="300.0" prefWidth="700.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <children>
            <VBox minWidth="300" prefHeight="200.0" prefWidth="511.0" HBox.hgrow="ALWAYS">
              <children>
                <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
                  <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                </StackPane>

                <StackPane fx:id="resultDisplayPlaceholder" maxHeight="300" minHeight="100" prefHeight="200" prefWidth="267.0" styleClass="pane-with-border" VBox.vgrow="NEVER">
                  <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                </StackPane>

                <StackPane fx:id="budgetDisplayPlaceholder" minHeight="50" prefHeight="50" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                  <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                </StackPane>
              </children>
            </VBox>

            <VBox fx:id="expenseList" maxHeight="800" minWidth="250" prefHeight="500" prefWidth="400" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
              <StackPane fx:id="expenseListPanelPlaceholder" prefHeight="300.0" prefWidth="400.0" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="personList" maxHeight="800" minWidth="250" prefHeight="500" prefWidth="400" styleClass="pane-with-border">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
              <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>
          </children>
        </HBox>
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
