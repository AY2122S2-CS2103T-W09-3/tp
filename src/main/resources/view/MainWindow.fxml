<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="900" minWidth="450" onCloseRequest="#handleExit" title="Expense Expert" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/coin_sprite.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <HBox prefHeight="200.0" prefWidth="200.0">
          <children>
            <StackPane fx:id="budgetDisplayPlaceholder" maxHeight="201.0" maxWidth="1.7976931348623157E308" minHeight="30" prefHeight="201.0" prefWidth="125.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
              </padding>
            </StackPane>

            <VBox prefHeight="100.0" prefWidth="241.0" HBox.hgrow="ALWAYS">
              <children>
                <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
                  <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                </StackPane>

                <StackPane fx:id="resultDisplayPlaceholder" maxHeight="190.0" maxWidth="1.7976931348623157E308" minHeight="30" prefHeight="190.0" prefWidth="228.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                  <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                </StackPane>
              </children>
            </VBox>
          </children>
        </HBox>

        <VBox fx:id="expenseList" minWidth="340" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
          </padding>
          <StackPane fx:id="expenseListPanelPlaceholder" VBox.vgrow="ALWAYS" />
        </VBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
